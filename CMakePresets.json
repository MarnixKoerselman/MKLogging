{
  "version": 8,
  "cmakeMinimumRequired": {
    "major": 3,
    "minor": 15,
    "patch": 0
  },
  "configurePresets": [
    {
      "name": "base",
      "hidden": true,
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/build/${presetName}",
      "installDir": "${sourceDir}/dist/${presetName}",
      "cacheVariables": {
        "CMAKE_EXPORT_COMPILE_COMMANDS": "ON"
      }
    },
    {
      "name": "linux-debug",
      "inherits": "base",
      "displayName": "Linux Debug",
      "description": "Linux debug build with all symbols",
      "condition": {
        "type": "equals",
        "lhs": "${hostSystemName}",
        "rhs": "Linux"
      },
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug"
      }
    },
    {
      "name": "linux-release",
      "inherits": "base",
      "displayName": "Linux Release",
      "description": "Linux optimized release build",
      "condition": {
        "type": "equals",
        "lhs": "${hostSystemName}",
        "rhs": "Linux"
      },
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release",
        "CMAKE_INTERPROCEDURAL_OPTIMIZATION": "ON"
      }
    },
    {
      "name": "linux-relwithdebinfo",
      "inherits": "base",
      "displayName": "Linux Release with Debug Info",
      "description": "Linux optimized build with debug information",
      "condition": {
        "type": "equals",
        "lhs": "${hostSystemName}",
        "rhs": "Linux"
      },
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "RelWithDebInfo"
      }
    },
    {
      "name": "linux-x86-debug",
      "inherits": "base",
      "displayName": "Linux x86 Debug",
      "description": "Linux 32-bit debug build",
      "condition": {
        "type": "equals",
        "lhs": "${hostSystemName}",
        "rhs": "Linux"
      },
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "CMAKE_C_FLAGS": "-m32",
        "CMAKE_CXX_FLAGS": "-m32"
      }
    },
    {
      "name": "linux-x86-release",
      "inherits": "base",
      "displayName": "Linux x86 Release",
      "description": "Linux 32-bit release build",
      "condition": {
        "type": "equals",
        "lhs": "${hostSystemName}",
        "rhs": "Linux"
      },
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release",
        "CMAKE_C_FLAGS": "-m32",
        "CMAKE_CXX_FLAGS": "-m32",
        "CMAKE_INTERPROCEDURAL_OPTIMIZATION": "ON"
      }
    },
    {
      "name": "windows-base",
      "inherits": "base",
      "hidden": true,
      "cacheVariables": {
        "CMAKE_C_COMPILER": "cl.exe",
        "CMAKE_CXX_COMPILER": "cl.exe"
      },
      "condition": {
        "type": "equals",
        "lhs": "${hostSystemName}",
        "rhs": "Windows"
      }
    },
    {
      "name": "win-x86-debug",
      "inherits": "windows-base",
      "displayName": "Windows x86 Debug",
      "description": "Windows x86 debug build",
      "architecture": {
        "value": "x86",
        "strategy": "external"
      },
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug"
      }
    },
    {
      "name": "win-x86-release",
      "inherits": "windows-base",
      "displayName": "Windows x86 Release",
      "description": "Windows x86 release build",
      "architecture": {
        "value": "x86",
        "strategy": "external"
      },
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "RelWithDebInfo",
        "CMAKE_INTERPROCEDURAL_OPTIMIZATION": "ON"
      }
    },
    {
      "name": "win-x64-debug",
      "inherits": "windows-base",
      "displayName": "Windows x64 Debug",
      "description": "Windows x64 debug build",
      "architecture": {
        "value": "x64",
        "strategy": "external"
      },
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug"
      }
    },
    {
      "name": "win-x64-release",
      "inherits": "windows-base",
      "displayName": "Windows x64 Release",
      "description": "Windows x64 release build",
      "architecture": {
        "value": "x64",
        "strategy": "external"
      },
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "RelWithDebInfo",
        "CMAKE_INTERPROCEDURAL_OPTIMIZATION": "ON"
      }
    },
    {
      "name": "windows-base-vs2022",
      "description": "Target Windows with the Visual Studio development environment.",
      "hidden": true,
      "inherits": "base",
      "generator": "Visual Studio 17 2022",
      "toolset": {
        "value": "v143,host=x64",
        "strategy": "set"
      },
      "cacheVariables": {
        "CMAKE_C_COMPILER": "cl.exe",
        "CMAKE_CXX_COMPILER": "cl.exe",
        "CMAKE_INTERPROCEDURAL_OPTIMIZATION_DEBUG": "OFF"
      },
      "condition": {
        "type": "equals",
        "lhs": "${hostSystemName}",
        "rhs": "Windows"
      }
    },
    {
      "name": "windows-x86-vs2022",
      "displayName": "x86",
      "description": "Target Windows (32-bit).",
      "inherits": "windows-base-vs2022",
      "architecture": {
        "value": "Win32",
        "strategy": "set"
      }
    },
    {
      "name": "windows-x64-vs2022",
      "displayName": "x64",
      "description": "Target Windows (64-bit).",
      "inherits": "windows-base-vs2022",
      "architecture": {
        "value": "x64",
        "strategy": "set"
      }
    }
  ],
  "buildPresets": [
    {
      "name": "windows-x86-debug",
      "description": "Debug configuration for Windows 32-bit target.",
      "displayName": "Debug (x86)",
      "configuration": "Debug",
      "configurePreset": "windows-x86-vs2022"
    },
    {
      "name": "windows-x86-release",
      "description": "Release configuration for Windows 32-bit target",
      "displayName": "Release (x86)",
      "configuration": "Release",
      "configurePreset": "windows-x86-vs2022"
    },
    {
      "name": "windows-x64-debug",
      "displayName": "Debug (x64)",
      "description": "Debug configuration for Windows 64-bit target.",
      "configuration": "Debug",
      "configurePreset": "windows-x64-vs2022"
    },
    {
      "name": "windows-x64-release",
      "displayName": "Release (x64)",
      "description": "Release configuration for Windows 64-bit target.",
      "configuration": "Release",
      "configurePreset": "windows-x64-vs2022"
    },
    {
      "name": "linux-x86-debug",
      "displayName": "Linux x86 Debug",
      "description": "Debug configuration for Linux 32-bit target.",
      "configurePreset": "linux-x86-debug"
    },
    {
      "name": "linux-x86-release",
      "displayName": "Linux x86 Release",
      "description": "Release configuration for Linux 32-bit target.",
      "configurePreset": "linux-x86-release"
    }
  ]
}
