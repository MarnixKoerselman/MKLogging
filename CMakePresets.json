{
  "version": 6,
  "cmakeMinimumRequired": {
    "major": 3,
    "minor": 23,
    "patch": 0
  },
  "configurePresets": [
    {
      "name": "linux-debug",
      "displayName": "Linux Debug",
      "description": "Target the Windows Subsystem for Linux (WSL) or a remote Linux system.",
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/_build_/${presetName}",
      "installDir": "${sourceDir}/_install_/${presetName}",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug"
      },
      "condition": {
        "type": "equals",
        "lhs": "${hostSystemName}",
        "rhs": "Linux"
      },
      "vendor": {
        "microsoft.com/VisualStudioRemoteSettings/CMake/1.0": {
          "sourceDir": "$env{HOME}/.vs/$ms{projectDirName}"
        }
      }
    },
    {
      "name": "windows-base",
      "description": "Target Windows with the Visual Studio development environment.",
      "hidden": true,
      "generator": "Visual Studio 17 2022",
      "binaryDir": "${sourceDir}/_build_/${presetName}",
      "installDir": "${sourceDir}/_install_/${presetName}",
      "toolset": {
        "value": "v143,host=x64",
        "strategy": "set"
      },
      "cacheVariables": {
        "CMAKE_C_COMPILER": "cl.exe",
        "CMAKE_CXX_COMPILER": "cl.exe"
      },
      "condition": {
        "type": "equals",
        "lhs": "${hostSystemName}",
        "rhs": "Windows"
      }
    },
    {
      "name": "x64",
      "displayName": "x64",
      "description": "Target Windows (64-bit).",
      "inherits": "windows-base",
      "architecture": {
        "value": "x64",
        "strategy": "set"
      }
    },
    {
      "name": "x86",
      "displayName": "x86",
      "description": "Target Windows (32-bit).",
      "inherits": "windows-base",
      "architecture": {
        "value": "Win32",
        "strategy": "set"
      }
    }
  ],
  "buildPresets": [
    {
      "name": "x64-debug",
      "displayName": "Debug (x64)",
      "description": "Debug configuration for Windows 64-bit target.",
      "configuration": "Debug",
      "configurePreset": "x64"
    },
    {
      "name": "x64-release",
      "displayName": "Release (x64)",
      "description": "Release configuration for Windows 64-bit target.",
      "configuration": "RelWithDebInfo",
      "configurePreset": "x64"
    },
    {
      "name": "x86-debug",
      "description": "Debug configuration for Windows 32-bit target.",
      "displayName": "Debug (x86)",
      "configuration": "Debug",
      "configurePreset": "x86"
    },
    {
      "name": "x86-release",
      "description": "Release configuration for Windows 32-bit target",
      "displayName": "Release (x86)",
      "configuration": "RelWithDebInfo",
      "configurePreset": "x86"
    }
  ]
}
