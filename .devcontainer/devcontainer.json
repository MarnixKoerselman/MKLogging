// For format details, see https://aka.ms/devcontainer.json. For config options, see the
// README at: https://github.com/devcontainers/templates/tree/main/src/cpp
{
  "name": "C++",
  "build": {
    "dockerfile": "Dockerfile"
  },

  // Configure environment variables for build optimization
  "remoteEnv": {
    "CCACHE_DIR": "/ccache"
  },

  // Mount ccache directory to persist the cache between container rebuilds
  "mounts": ["source=ccache,target=/ccache,type=volume"],

  // Configure VS Code settings
  "customizations": {
    "vscode": {
      "settings": {
        "cmake.configureOnOpen": true,
        "cmake.parallelJobs": 0 // Use all available cores
      },
      "extensions": [
        "ms-vscode.cmake-tools", // this comes pre-installed in the base dev container
        "mhutchie.git-graph",
        "esbenp.prettier-vscode"
      ]
    }
  }
  // Uncomment to connect as root instead. More info: https://aka.ms/dev-containers-non-root.
  // "remoteUser": "root"
}
