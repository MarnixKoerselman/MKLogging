// For format details, see https://aka.ms/devcontainer.json. For config options, see the
// README at: https://github.com/devcontainers/templates/tree/main/src/cpp
{
  "name": "C++",
  "build": {
    "dockerfile": "Dockerfile"
  },

  // Configure environment variables for build optimization
  "remoteEnv": {
    "CCACHE_DIR": "/ccache"
  },

  // Mount ccache directory to persist the cache between container rebuilds
  "mounts": [
    "source=ccache,target=/ccache,type=volume",
    "source=/var/run/docker.sock,target=/var/run/docker.sock,type=bind"
  ],

  // Configure VS Code settings
  "customizations": {
    "vscode": {
      "settings": {
        "cmake.configureOnOpen": true,
        "cmake.parallelJobs": 0 // Use all available cores
      },
      "extensions": [
        "ms-vscode.cmake-tools",
        "ms-azuretools.vscode-containers",
        //"docker.docker",
        "mhutchie.git-graph",
        "esbenp.prettier-vscode",
        "amazonwebservices.amazon-q-vscode",
        "github.vscode-github-actions",
        "editorconfig.editorconfig" // https://editorconfig.org/
      ]
    }
  },
  // Uncomment to connect as root instead. More info: https://aka.ms/dev-containers-non-root.
  "remoteUser": "root"
}
